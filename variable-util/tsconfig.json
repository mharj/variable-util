{
    "compilerOptions": {
        "lib": [
            "es2021",
            "dom",
            "dom.iterable"
        ],
        "module": "commonjs",
        "target": "es5",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceRoot": "./src",
        "types": [
            "node",
        ],
        "declaration": true,
        "removeComments": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true
    },
    "typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "../docs",
        "defaultCategory": "General",
	},
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "test",
        "dist"
    ]
}