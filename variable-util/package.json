{
    "name": "@avanio/variable-util",
    "version": "0.11.0",
    "description": "Utility to get variables from multiple resources",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "private": false,
    "scripts": {
        "doc": "typedoc",
        "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "test": "vitest test --run --no-isolate --coverage",
        "coverage": "vitest test --run --no-isolate --reporter=dot --coverage --coverage.reporter=lcov",
        "lint": "eslint src",
        "validate": "tsc --noEmit --project tsconfig.test.json"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/variable-util.git"
    },
    "keywords": [
        "env",
        "variables"
    ],
    "author": "mharj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mharj/variable-util/issues"
    },
    "homepage": "https://github.com/mharj/variable-util#readme",
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.10.1",
        "@stylistic/eslint-plugin-ts": "^2.10.1",
        "@types/etag": "^1.8.3",
        "@types/node": "^18.19.64",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "@vitest/coverage-v8": "^2.1.4",
        "c8": "^10.1.2",
        "cross-fetch": "^4.0.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-sonarjs": "^0.25.1",
        "etag": "^1.8.1",
        "prettier": "^3.3.3",
        "sinon": "^19.0.2",
        "source-map-support": "^0.5.21",
        "tsup": "^8.3.5",
        "typedoc": "^0.26.11",
        "typescript": "^5.6.3",
        "vite": "^5.4.10",
        "vitest": "^2.1.4",
        "zod": "^3.23.8"
    },
    "dependencies": {
        "@avanio/logger-like": "^0.2.7",
        "@luolapeikko/result-option": "^1.0.3",
        "url-polyfill": "^1.1.12"
    },
    "packageManager": "pnpm@9.13.2+sha256.ccce81bf7498c5f0f80e31749c1f8f03baba99d168f64590fc7e13fad3ea1938"
}
