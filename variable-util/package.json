{
    "name": "@avanio/variable-util",
    "version": "0.10.1",
    "description": "Utility to get variables from multiple resources",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "private": false,
    "scripts": {
        "doc": "typedoc",
        "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "test": "mocha",
        "lint": "eslint src",
        "validate": "tsc --noEmit --project tsconfig.test.json"
    },
    "files": [
        "dist"
    ],
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/variable-util.git"
    },
    "keywords": [
        "env",
        "variables"
    ],
    "author": "mharj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mharj/variable-util/issues"
    },
    "homepage": "https://github.com/mharj/variable-util#readme",
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.10.1",
        "@stylistic/eslint-plugin-ts": "^2.10.1",
        "@types/chai": "^4.3.20",
        "@types/chai-as-promised": "^7.1.8",
        "@types/etag": "^1.8.3",
        "@types/mocha": "^10.0.9",
        "@types/node": "^18.19.64",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "chai": "^4.5.0",
        "chai-as-promised": "^7.1.2",
        "cross-fetch": "^4.0.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-sonarjs": "^0.25.1",
        "etag": "^1.8.1",
        "mocha": "^10.8.2",
        "prettier": "^3.3.3",
        "sinon": "^19.0.2",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.5",
        "typedoc": "^0.26.11",
        "typescript": "^5.6.3",
        "zod": "^3.23.8"
    },
    "dependencies": {
        "@avanio/logger-like": "^0.2.7",
        "@luolapeikko/result-option": "^1.0.3",
        "url-polyfill": "^1.1.12"
    }
}
