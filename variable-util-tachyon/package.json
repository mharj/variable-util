{
  "name": "@avanio/variable-util-tachyon",
  "version": "0.12.0",
  "description": "tachyon store for variables",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "private": false,
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": "vitest test --run --no-isolate --coverage",
    "coverage": "vitest test --run --no-isolate --reporter=dot --coverage --coverage.reporter=lcov",
    "lint": "eslint . --ext .ts",
    "validate": "tsc --noEmit --project tsconfig.test.json"
  },
  "files": [
    "dist"
  ],
  "author": "mharj",
  "license": "MIT",
  "keywords": [
    "tachyon",
    "storage",
    "env",
    "variable",
    "util"
  ],
  "devDependencies": {
    "@avanio/logger-like": "^0.2.11",
    "@avanio/variable-util": "^0.13.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "@stylistic/eslint-plugin-ts": "^3.1.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^18.19.78",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitest/coverage-v8": "^2.1.9",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-sonarjs": "^0.25.1",
    "prettier": "^3.5.2",
    "quantum-sequence": "^0.11.0",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "tachyon-drive": "^0.11.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^2.1.9",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "@avanio/logger-like": "^0.2.10",
    "@avanio/variable-util": "^0.13",
    "quantum-sequence": "^0.11",
    "tachyon-drive": "^0.11",
    "zod": "^3"
  }
}
